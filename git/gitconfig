[user]
    email = dstrong@glyx.co.uk
    name = Daniel Strong
[includeIf "gitdir:~/bbc/**"]
    path = ~/.work-dotfiles/gitconfig
[push]
    default = simple
[branch]
    autosetuprebase = always
[commit]
    verbose = true
[core]
    editor = nvim
    excludesfile = ~/.gitignore
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    side-by-side = true
[alias]
    a   = add
    aa  = add .
    ai  = add -i
    b   = branch
    br  = branch
    c   = commit
    ci  = commit
    ca  = commit -a
    co  = checkout
    cb  = checkout -b
    d   = diff
    dc  = diff --word-diff --word-diff-regex='.'
    dci = diff --word-diff --word-diff-regex='.' --cached
    di  = diff --cached
    dw  = diff --word-diff
    dwi = diff --word-diff --cached
    fup = fetch upstream
    lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    p   = push
    ph  = push -u origin HEAD
    pl  = pull
    pls = pull --autostash
    r   = rebase
    s   = status
    sh  = stash
    sk  = stash --keep-index
    smash = commit -a --amend
[init]
	defaultBranch = main
